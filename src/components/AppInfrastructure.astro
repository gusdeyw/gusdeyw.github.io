<script>
    import { animate, stagger } from "animejs";

    document.addEventListener("DOMContentLoaded", () => {
        // Animation timeline
        let allAnimations = [];

        // Animate tech boxes with staggered entrance
        const frontendBoxes = animate(".frontend-box", {
            targets: ".frontend-box",
            opacity: [0.3, 0.9],
            translateY: [20, 0],
            duration: 600,
            delay: stagger(100),
            easing: "easeOutQuad",
        });
        allAnimations.push(frontendBoxes);

        const backendBoxes = animate(".backend-box", {
            targets: ".backend-box",
            opacity: [0.3, 0.9],
            translateY: [20, 0],
            duration: 600,
            delay: stagger(100, { start: 200 }),
            easing: "easeOutQuad",
        });
        allAnimations.push(backendBoxes);

        const databaseBoxes = animate(".database-box", {
            targets: ".database-box",
            opacity: [0.3, 0.9],
            translateY: [20, 0],
            duration: 600,
            delay: stagger(100, { start: 400 }),
            easing: "easeOutQuad",
        });
        allAnimations.push(databaseBoxes);

        const deploymentBoxes = animate(".deployment-box", {
            targets: ".deployment-box",
            opacity: [0.3, 0.9],
            translateY: [20, 0],
            duration: 600,
            delay: stagger(100, { start: 300 }),
            easing: "easeOutQuad",
        });
        allAnimations.push(deploymentBoxes);

        const osBoxes = animate(".os-box", {
            targets: ".os-box",
            opacity: [0.3, 0.9],
            translateY: [20, 0],
            duration: 600,
            delay: stagger(100, { start: 500 }),
            easing: "easeOutQuad",
        });
        allAnimations.push(osBoxes);

        // Pulse animation for tech boxes
        const pulseAnimation = animate(".tech-box", {
            targets: ".tech-box",
            boxShadow: [
                "0 0 0 0 rgba(139, 92, 246, 0.7)",
                "0 0 0 10px rgba(139, 92, 246, 0)",
            ],
            duration: 2000,
            loop: true,
            easing: "easeOutQuad",
            delay: stagger(200),
        });
        allAnimations.push(pulseAnimation);

        // Animate flow lines
        const flowLines = document.querySelectorAll(".flow-line");
        flowLines.forEach((line, index) => {
            const length = (line as SVGLineElement).getTotalLength?.() || 0;
            if (length > 0) {
                line.setAttribute("stroke-dasharray", String(length));
                line.setAttribute("stroke-dashoffset", String(length));

                const lineAnimation = animate(line, {
                    strokeDashoffset: [length, 0],
                    duration: 1000,
                    delay: 300 + index * 100,
                    easing: "easeInOutQuad",
                });
                allAnimations.push(lineAnimation);
            }
        });

        // Data flow animation on lines
        animate(".data-flow-dot:nth-of-type(1)", {
            cy: [230, 350],
            opacity: [0.8, 0.2, 0.8],
            duration: 2000,
            loop: true,
            easing: "linear",
            delay: 400,
        });

        animate(".data-flow-dot:nth-of-type(2)", {
            cy: [230, 350],
            opacity: [0.8, 0.2, 0.8],
            duration: 2000,
            loop: true,
            easing: "linear",
            delay: 500,
        });

