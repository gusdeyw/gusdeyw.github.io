---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import MobileThemeToggle from "../../components/MobileThemeToggle.astro";
import { siteConfig } from "../../config";
import { createSlug, getProjectBySlug } from "../../utils/slug";
import { getGitHubUrlFromProject } from "../../utils/github";
import "../../styles/global.css";

export async function getStaticPaths() {
    // Use the projects from your config and create slug-based routes
    const paths = [];

    for (const project of siteConfig.projects) {
        const slug = createSlug(project.name);

        // Use manual detailed content if available, otherwise show a fallback message
        const projectContent =
            project.detailedContent ||
            `
            <div class="text-center py-8">
                <h3 class="text-xl font-semibold mb-4">Project Details Coming Soon</h3>
                <p class="text-gray-600 dark:text-gray-400 mb-6">
                    Detailed documentation for this project is currently being prepared.
                </p>
                ${
                    project.link && project.link !== "#"
                        ? `
                    <a href="${project.link}" target="_blank" rel="noopener noreferrer" 
                       class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline">
                        View Project ${project.linkType === "demo" ? "Demo" : project.linkType === "github" ? "Repository" : "Link"} â†’
                    </a>
                `
                        : ""
                }
            </div>
        `;

        const githubUrl = getGitHubUrlFromProject(project);

        paths.push({
            params: { slug },
            props: {
                project,
                projectContent,
                githubUrl,
            },
        });
    }

    return paths;
}

const { project, projectContent, githubUrl } = Astro.props;
const { slug } = Astro.params;

// Verify project exists (safety check)
if (!project) {
    return Astro.redirect("/404");
}
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link
            rel="icon"
            type="image/svg+xml"
            href={import.meta.env.BASE_URL + "/favicon.svg"}
        />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={project.description} />
        <title>{project.name} - {siteConfig.name}</title>

        <!-- SEO improvements with slug -->
        <meta
            property="og:title"
            content={`${project.name} - ${siteConfig.name}`}
        />
        <meta property="og:description" content={project.description} />
        <meta property="og:type" content="article" />
        <link
            rel="canonical"
            href={`${siteConfig.site || ""}${import.meta.env.BASE_URL}/projects/${slug}`}
        />

        <!-- Project content styles -->
        <style>
            .project-content {
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
                    "Noto Sans", Helvetica, Arial, sans-serif;
                line-height: 1.6;
                color: #1f2328;
            }

            .dark .project-content {
                color: #e6edf3;
            }

            .project-content h1,
            .project-content h2,
            .project-content h3,
            .project-content h4,
            .project-content h5,
            .project-content h6 {
                margin-top: 24px;
                margin-bottom: 16px;
                font-weight: 600;
                line-height: 1.25;
                color: #1f2328;
            }

            .dark .project-content h1,
            .dark .project-content h2,
            .dark .project-content h3,
            .dark .project-content h4,
            .dark .project-content h5,
            .dark .project-content h6 {
                color: #e6edf3;
            }

            .project-content h1 {
                font-size: 2em;
                border-bottom: 1px solid #d1d9e0;
                padding-bottom: 0.3em;
            }

            .project-content h2 {
                font-size: 1.5em;
                border-bottom: 1px solid #d1d9e0;
                padding-bottom: 0.3em;
            }

            .dark .project-content h1,
            .dark .project-content h2 {
                border-bottom-color: #30363d;
            }

            .project-content p {
                margin-bottom: 16px;
                color: #1f2328;
            }

            .dark .project-content p {
                color: #e6edf3;
            }

            .project-content ul,
            .project-content ol {
                margin-bottom: 16px;
                padding-left: 2em;
            }

            .project-content li {
                margin-bottom: 0.5em;
                color: #1f2328;
            }

            .dark .project-content li {
                color: #e6edf3;
            }

            .project-content code {
                padding: 0.2em 0.4em;
                margin: 0;
                font-size: 85%;
                background-color: #afb8c133;
                border-radius: 6px;
                font-family: ui-monospace, SFMono-Regular, "SF Mono", Consolas,
                    "Liberation Mono", Menlo, monospace;
            }

            .dark .project-content code {
                background-color: #6e768166;
                color: #e6edf3;
            }

            .project-content pre {
                padding: 16px;
                overflow: auto;
                font-size: 85%;
                line-height: 1.45;
                background-color: #f6f8fa;
                border-radius: 6px;
                margin-bottom: 16px;
            }

            .dark .project-content pre {
                background-color: #161b22;
                color: #e6edf3;
            }

            .project-content pre code {
                background-color: transparent;
                padding: 0;
            }

            .project-content a {
                color: #0969da;
                text-decoration: none;
            }

            .project-content a:hover {
                text-decoration: underline;
            }

            .dark .project-content a {
                color: #4493f8;
            }

            .project-content strong {
                font-weight: 600;
            }

            .project-content img {
                max-width: 100%;
                height: auto;
                border-radius: 6px;
                margin: 16px 0;
            }

            .project-detail-content {
                max-width: none;
            }
        </style>
    </head>
    <body>
        <!-- Theme initialization script -->
        <script is:inline>
            (function () {
                const savedTheme = localStorage.getItem("theme");
                const systemTheme = window.matchMedia(
                    "(prefers-color-scheme: dark)",
                ).matches
                    ? "dark"
                    : "light";
                const currentTheme = savedTheme || systemTheme;

                if (currentTheme === "dark") {
                    document.documentElement.classList.add("dark");
                }
            })();
        </script>

        <Header />
        <MobileThemeToggle />

        <main
            class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300"
        >
            <div class="container mx-auto px-4 py-16 lg:py-24">
                <div class="max-w-4xl mx-auto">
                    <!-- Back navigation -->
                    <nav class="mb-8">
                        <a
                            href={`${import.meta.env.BASE_URL}/#projects`}
                            class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-300"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Back to projects
                        </a>
                    </nav>

                    <!-- Project header -->
                    <div class="mb-12">
                        <h1
                            class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 text-gray-900 dark:text-white"
                        >
                            {project.name}
                        </h1>

                        <div
                            class="w-20 h-1 rounded-full mb-8"
                            style={`background-color: ${siteConfig.accentColor}`}
                        >
                        </div>

                        <p
                            class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl"
                        >
                            {project.description}
                        </p>
                    </div>

                    <!-- Skills -->
                    {
                        project.skills && project.skills.length > 0 && (
                            <div class="mb-12">
                                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                                    Technologies Used
                                </h2>
                                <div class="flex flex-wrap gap-3">
                                    {project.skills.map((skill) => (
                                        <span class="px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg font-medium border border-gray-200 dark:border-gray-700 transition-colors duration-300">
                                            {skill}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )
                    }

                    <!-- Actions -->
                    <div class="flex flex-wrap gap-4 mb-12">
                        {
                            project.link && project.link !== "#" && (
                                <a
                                    href={project.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center gap-2 px-6 py-3 text-white rounded-lg font-semibold transition-all duration-300 hover:translate-y-[-2px] hover:shadow-lg"
                                    style={`background-color: ${siteConfig.accentColor}; box-shadow: 0 4px 14px 0 ${siteConfig.accentColor}30`}
                                >
                                    {project.linkType === "demo" ? (
                                        <>
                                            View Live Demo
                                            <svg
                                                class="w-4 h-4"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                />
                                            </svg>
                                        </>
                                    ) : project.linkType === "github" ? (
